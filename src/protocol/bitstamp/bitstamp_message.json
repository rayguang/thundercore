// Request: Get user trades
// limit defines number of trades to be returned; if no limit specified, returns all trades up to 1000
{
    "requestType":  "Account",  
    "subType":      "GetMyTrades",         
    "userID":       436,                        
    "exchange":     "BITSTAMP",
    "symbol":       "btcusd",
	"limit":            2
}

// Reply
// datetime	Date and time.
// id			Transaction ID.
// type		Transaction type: 0 - deposit; 1 - withdrawal; 2 - market trade; 14 - sub account transfer.
// usd			USD amount.
// eur 		(v2 calls only)	EUR amount.
// btc			BTC amount.
// xrp 		(v2 calls only)	XRP amount.
// btc_usd 	(or btc_eur if available)	Exchange rate.
// fee			Transaction fee.
// order_id	Executed order ID.
// Supported values for currency_pair: btcusd, btceur, eurusd, 
// xrpusd, xrpeur, xrpbtc, ltcusd, ltceur, ltcbtc, ethusd, etheur, ethbtc, bchusd, bcheur, bchbtc
